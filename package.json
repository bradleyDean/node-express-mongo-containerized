{
  "name": "node-exp-mongo-ms-alpha",
  "version": "1.0.0",
  "description": "Containerized node express microservice with mongo. Compatible with CircleCi integration for CI/CD",
  "main": "index.js",
  "scripts": {
    "compile-ts": "tsc",
    "start": "node dist/index.js", 
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:integration": "jest '**/*.integration.test.ts'"
  },
  "author": "Bradley Lignoski",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "mongoose": "^8.1.0"
  },
  "engines": {
    "node": "20.x"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/mongoose": "^5.11.97",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0"
  }
}
